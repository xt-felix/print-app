# 运行环境
NODE_ENV=development
OPERATING_ENV=development

# 日志配置
USAGE_LOG_FILE=true
LOG_LEVEL=info

# 存储配置
STORAGE_DIR=/public/uploads
MAX_UPLOAD_SIZE_MB=5

# 聊天配置
MAX_RESPONSE_SEGMENTS=5
MAX_TOKENS=8000

# LLM 配置
LLM_PROVIDER=OpenAI
PROVIDER_BASE_URL=https://api.openai.com/v1
PROVIDER_API_KEY=sk-xxx
LLM_DEFAULT_MODEL=gpt-4
LLM_MINOR_MODEL=gpt-3.5-turbo

# 工具 API
SERPER_API_KEY=
WEATHER_API_KEY=

# Logto 认证
LOGTO_ENABLE=false
LOGTO_ENDPOINT=
LOGTO_APP_ID=
LOGTO_APP_SECRET=
LOGTO_BASE_URL=http://localhost:3000
LOGTO_COOKIE_SECRET=

# 腾讯云 COS
COS_SECRET_ID=
COS_SECRET_KEY=
COS_REGION=
COS_BUCKET=
COS_CDN_DOMAIN=
